{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Server=YourServerNameHere;Database=Body4U.EmailSender;Trusted_Connection=True;TrustServerCertificate=True;MultipleActiveResultSets=true" //Normal SQL Connection String
    //"DefaultConnection": "Server=YourServerNameHere;Database=Body4U.EmailSender;User Id=sa; Password=YourPasswordHere;MultipleActiveResultSets=true" //Docker SQL Connection String
  },
  "MailSettings": {
    "Host": "smtp.gmail.com",
    "Port": 587,
    "Credentials": {
      "UserName": "Your@gmail.here",
      "Password": "YourPasswordHere",
      "DisplayName": "YourDisplayNameHere"
    }
  },
  "RabbitMQ": {
    "Host": "YourHostHere",
    "Username": "YourUsernameHere",
    "Password": "YourPasswordHere"
  },
  "Serilog": {
    "Using": [],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "Enrich": [ "FromLogContext", "WithMachineName", "WithProcessId", "WithThreadId" ],
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "YourPathHere",
          "rollingInterval": "Day",
          "restrictedToMinimumLevel": "Information",
          "fileSizeLimitBytes": 2097152,
          "rollOnFileSizeLimit": true,
          "shared": true,
          "flushToDiskInterval": 1
        }
      }
    ]
  },
  "AllowedHosts": "*"
}
